@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UserCrudApp.Models.User

<h1>Supprimer l'utilisateur</h1>

<h3>Es-tu sûr de vouloir supprimer cet utilisateur ?</h3>

<div>
    <h4>Nom : @Model.Name</h4>
    <h4>Email : @Model.Email</h4>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
